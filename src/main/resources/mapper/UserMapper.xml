<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ucar.training.mapper.UserMapper">
    <!-- 基本的增删改查 -->
    <insert id="addUser" parameterType="User">
        insert into user(name, sex, age, password, likes, tag, admin)
        values(#{name}, #{sex}, #{age}, #{password}, #{likes}, #{tag}, #{admin})
    </insert>
    <delete id="deleteUser" parameterType="int">
        delete from user where id = #{id}
    </delete>
    <update id="updateUser" parameterType="User">
        update user set name = #{name}, sex = #{sex}, age = #{age}, likes = #{likes}, tag = #{tag}
        where id = #{id}
    </update>
    <select id="getUsers" resultType="User">
        select * from user
    </select>

    <!-- 根据用户名返回用户信息 -->
    <select id="getUserByName" parameterType="string" resultType="User">
        select * from user where name = #{name}
    </select>
    <!-- 根据用户id返回用户信息 -->
    <select id="getUserById" parameterType="int" resultType="User">
        select * from user where id = #{id}
    </select>

    <!-- 用户名密码匹配 -->
    <select id="matchUser" resultType="User">
        select * from user where name = #{name} and password = #{password}
    </select>
</mapper>